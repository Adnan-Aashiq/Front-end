@model IEnumerable<Rafay.Models.TripViewModel>

@{
    ViewBag.Title = "Index";
}

<head>
    <style>
        body {
            background-image: url('/Content/Images/trips.jpg');
            position: center;
            background-size: cover;
            background-repeat: no-repeat;
        }
    </style>
</head>
<body>


    <h2>Index</h2>


    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AddedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AddedBy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Country)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>

                <td>
                    @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |

                </td>
            </tr>
        }

    </table>
    <div style="padding-left:390px">
        <div class="form-group">
            <a href="~/Trips/Create" class="btn btn-default" style="background-color:purple;color:white;width:330px;height:40px"><b class="pt-3">Add Trip</b></a>
        </div>
        <div class="form-group">
            <a href="~/Trips/Filtered" class="btn btn-default" style="background-color:purple;color:white;width:330px;height:40px"><b class="pt-3">Filtered Trips</b></a>
        </div>
        <div class="form-group">
            <a href="~/Trips/Delete" class="btn btn-default" style="background-color:purple;color:white;width:330px;height:40px"><b class="pt-3">Delete My Trip</b></a>
        </div>
        <div class="form-group">
            <a href="~/Account/Index" class="btn btn-default" style="background-color:purple;color:white;width:330px;height:40px"><b class="pt-3">My Account</b></a>
        </div>
    </div>

</body>
