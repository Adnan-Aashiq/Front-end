                </div>
            </div>
            <div class="form-group" style="padding-left:210px">
                <form method="get" action="/Account/Index">
                    <a href="~/Account/Index" class="btn btn-default" style="background-color:purple;color:white;width:280px;height:40px"><b class="pt-3">My Account</b></a>

                </form>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</body>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
