@model IEnumerable<ZipShip.Models.OrderViewModel>

@{
    ViewBag.Title = "Index";
}

<head>
    <style>

        body {
            background-image: url('/Content/Images/orders.jpg');
            position: center;
            background-size: cover;
            background-repeat: no-repeat;
        }
    </style>
</head>
<body>


    <h2>Index</h2>


    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DealPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AddedBy)
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DealPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AddedBy)
                </td>

                <td>
                    @Html.ActionLink("Select", "Edit", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Orderers Details", "Details", new { /* id=item.PrimaryKey */ }) |

                </td>
            </tr>
        }

    </table>
    <br />
    <br />
    <div style="padding-left:390px">
        <div class="form-group">
            <a href="~/Order/Create" class="btn btn-default" style="background-color:purple;color:white;width:330px;height:40px"><b class="pt-3">Add Order</b></a>
        </div>
        <div class="form-group">
            <a href="~/Account/Index" class="btn btn-default" style="background-color:purple;color:white;width:330px;height:40px"><b class="pt-3">My Account</b></a>
        </div>

    </div>
</body>
